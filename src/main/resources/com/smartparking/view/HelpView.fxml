<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 20;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="How to Use ParkNet" />

            <VBox spacing="10.0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Making a Reservation:" />
                <TextFlow>
                    <Text text="1. Navigate to 'New Reservation' from the side menu." />
                </TextFlow>
                <TextFlow>
                    <Text text="2. Select your desired date and start/end times for parking." />
                </TextFlow>
                <TextFlow>
                    <Text text="3. Click 'Check Availability'." />
                </TextFlow>
                 <TextFlow>
                    <Text text="4. If floors are presented, select your desired floor." />
                </TextFlow>
                <TextFlow>
                    <Text text="5. Available parking spots will be shown as green cards. Click on a green spot card to select it. The card will turn blue." />
                </TextFlow>
                <TextFlow>
                    <Text text="6. The selected spot ID will appear at the bottom." />
                </TextFlow>
                <TextFlow>
                    <Text text="7. Click 'Confirm Reservation.' A confirmation message will appear." />
                </TextFlow>
            </VBox>

            <VBox spacing="10.0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Viewing Your Reservation History:" />
                 <TextFlow>
                    <Text text="1. Navigate to 'History' from the side menu." />
                </TextFlow>
                <TextFlow>
                    <Text text="2. Your past and upcoming reservations will be displayed as cards." />
                </TextFlow>
                <TextFlow>
                    <Text text="3. You can refresh the list using the 'Refresh History' button." />
                </TextFlow>
            </VBox>

            <VBox spacing="10.0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Logging Out:" />
                <TextFlow>
                    <Text text="1. Click the 'Logout' button in the top navigation bar (if visible) or from the main user menu." />
                </TextFlow>
            </VBox>
            
            <VBox spacing="10.0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Admin Panel (For Administrators):" />
                <TextFlow>
                    <Text text="1. Access via the 'Admin Login' from the initial home screen." />
                </TextFlow>
                 <TextFlow>
                    <Text text="2. Manage reservations, parking spots, users, and view statistics/charts." />
                </TextFlow>
            </VBox>

        </VBox>
    </content>
</ScrollPane>