<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.smartparking.model.Reservation?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import java.lang.String?>
<?import java.lang.Double?>
<?import java.lang.Integer?>


<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartparking.controller.UserHistoryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <top>
      <Label text="My Reservation History" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4a4a8a;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
      <TableView fx:id="historyTable" prefHeight="400.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="reservationIdColumn" prefWidth="75.0" text="Res ID">
               <cellValueFactory><PropertyValueFactory property="reservationId" /></cellValueFactory>
            </TableColumn>
          <TableColumn fx:id="spotIdColumn" prefWidth="90.0" text="Spot ID">
               <cellValueFactory><PropertyValueFactory property="spotId" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="startTimeColumn" prefWidth="170.0" text="Start Time">
                 <cellValueFactory><PropertyValueFactory property="formattedStartTime" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="endTimeColumn" prefWidth="170.0" text="End Time">
                 <cellValueFactory><PropertyValueFactory property="formattedEndTime" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price">
                 <cellValueFactory><PropertyValueFactory property="calculatedPrice" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="bookedAtColumn" prefWidth="170.0" text="Booked At">
                 <cellValueFactory><PropertyValueFactory property="formattedCreationTimestamp" /></cellValueFactory>
            </TableColumn>
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleRefresh" text="Refresh History" />
            <Button mnemonicParsing="false" onAction="#handleGoToReservation" text="Make New Reservation" styleClass="reserve-button"/>
            <!-- Add Cancel Reservation button if needed -->
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
