<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import java.lang.Integer?>
<?import java.lang.String?>


<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smartparking.controller.ParkingLotController">
    <padding>
        <Insets top="15.0" right="20.0" bottom="15.0" left="20.0" />
    </padding>

    <top>
        <VBox spacing="10" alignment="CENTER">
             <Label text="Select Parking Spot" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4a4a8a;"/>
             <HBox spacing="10" alignment="CENTER">
                 <Label text="Date:"/>
                 <DatePicker fx:id="datePicker" promptText="Select Date" onAction="#handleDateTimeChange"/>
                 <Label text="Start Time:"/>
                 <HBox spacing="5" alignment="CENTER_LEFT">
                    <ComboBox fx:id="startHourCombo" promptText="HH" prefWidth="70" onAction="#handleDateTimeChange"/>
                    <Label text=":"/>
                    <ComboBox fx:id="startMinuteCombo" promptText="MM" prefWidth="70" onAction="#handleDateTimeChange"/>
                 </HBox>
                 <Label text="End Time:"/>
                  <HBox spacing="5" alignment="CENTER_LEFT">
                    <ComboBox fx:id="endHourCombo" promptText="HH" prefWidth="70" onAction="#handleDateTimeChange"/>
                    <Label text=":"/>
                    <ComboBox fx:id="endMinuteCombo" promptText="MM" prefWidth="70" onAction="#handleDateTimeChange"/>
                 </HBox>
                 <Button text="Check Availability" onAction="#handleCheckAvailability"/>
             </HBox>
             <Label fx:id="availabilityMessageLabel" style="-fx-text-fill: blue;" managed="false" visible="false"/> <!-- Hide initially -->
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-border-color: lightgrey;" BorderPane.alignment="CENTER">
            <content>
                <!-- TilePane will be populated dynamically with parking spots -->
                <TilePane fx:id="parkingGrid" hgap="10" vgap="10" alignment="TOP_LEFT" prefColumns="10" style="-fx-background-color: #e8e8e8;">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                    <!-- Example Spot (remove later): -->
                    <!-- <Button text="A1" prefWidth="60" prefHeight="40" styleClass="spot-button-available"/> -->
                </TilePane>
            </content>
             <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>

    <bottom>
         <HBox alignment="CENTER_RIGHT" spacing="10">
             <Label fx:id="selectedSpotLabel" text="Selected Spot: None" style="-fx-font-weight: bold;"/>
             <Button fx:id="confirmReservationButton" text="Confirm Reservation" onAction="#handleConfirmReservation" disable="true" styleClass="reserve-button"/>
         </HBox>
    </bottom>

</BorderPane>
