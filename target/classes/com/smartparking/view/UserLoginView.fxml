<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="421.0" spacing="20" styleClass="login-register-view" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartparking.controller.UserLoginController" >
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4a4a8a;" text="User Login" />

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="40.0" />
        </rowConstraints>

        <TextField fx:id="usernameField" prefHeight="40.0" prefWidth="360.0" promptText="Enter username" GridPane.rowIndex="0" />
        <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="360.0" promptText="Enter password" GridPane.rowIndex="1" />
    </GridPane>

    <Label fx:id="messageLabel" managed="false" style="-fx-text-fill: red;" text="Error Message" visible="false" />

    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="loginButton" defaultButton="true" maxWidth="Infinity" onAction="#handleLogin" prefHeight="40.0" styleClass="reserve-button" text="Login" />
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" />
            <Hyperlink onAction="#handleGoToRegister" text="Register here" />
        </HBox>
    </VBox>
</VBox>
